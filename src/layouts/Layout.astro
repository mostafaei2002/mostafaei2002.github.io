---
import Navbar from './Navbar.astro';
import Footer from './Footer.astro';
import { ViewTransitions } from 'astro:transitions';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang='en' class='scroll-smooth'>
  <head>
    <meta charset='UTF-8' />
    <meta name='description' content='Astro description' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <link rel='icon' type='image/svg+xml' href='/favicon.svg' />
    <meta name='generator' content={Astro.generator} />
    <title>mostafaei2002 - {title}</title>
    <ViewTransitions />
  </head>
  <body class='grid grid-rows-[auto_1fr_auto] h-dvh'>
    <Navbar />
    <main class='container mx-auto px-2 md:px-4 lg:px-8'><slot /></main>
    <Footer />
    <style is:global>
      .display-large {
        @apply text-6xl leading-[64px] text-gray-800;
      }

      .display-medium {
        @apply text-5xl leading-[52px] text-gray-800;
      }

      .heading-primary {
        @apply text-4xl leading-10 text-gray-800;
      }

      .heading-secondary {
        @apply text-3xl leading-9 text-gray-800;
      }

      .heading-tertiary {
        @apply text-2xl leading-8 text-gray-800;
      }

      .text-lead {
        @apply text-xl leading-6 tracking-[0.5px] text-gray-700;
      }

      .text-body {
        @apply text-base leading-5 tracking-[0.25px] text-gray-700;
      }

      h1 {
        @apply text-3xl font-semibold;
      }

      h2 {
        @apply text-3xl font-semibold;
      }

      h3 {
        @apply text-xl font-semibold;
      }

      h4 {
        @apply text-base font-semibold;
      }
      h1,
      h2,
      h3,
      h4,
      h5,
      h6 {
        @apply text-neutral-800;
      }
      p,
      span {
        @apply text-neutral-700;
      }
    </style>
  </body>
</html>
