---
const { text, href, stretch = false, state = "normal" } = Astro.props;
---

<a
    href={href}
    class={(stretch ? "btn--outline flex-1" : "btn--outline") +
        " " +
        `btn--${state}`}>{text}</a
>

<style>
    .btn--outline {
        @apply py-2 px-6 text-center border border-sky-600 transition duration-200 hover:bg-sky-600 hover:text-white;
    }
    .btn--flex {
        @apply flex-1;
    }
    .btn--normal {
    }
    .btn--active {
        @apply bg-sky-600 text-white;
    }
    .btn--disabled {
        @apply bg-white text-gray-800 border-gray-600 hover:bg-gray-200 hover:text-gray-800;
    }
</style>
