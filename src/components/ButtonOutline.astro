---
const { text, href, stretch = false } = Astro.props;
---

<a href={href} class={stretch ? "btn--outline flex-1" : "btn--outline"}
    >{text}</a
>

<style>
    .btn--outline {
        @apply py-2 px-6 text-center border border-sky-600 transition duration-200 hover:bg-sky-600 hover:text-white;
    }
    .btn--flex {
        @apply flex-1;
    }
</style>
